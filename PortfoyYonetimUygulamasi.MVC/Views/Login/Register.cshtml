<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-body">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4"><span class="fas fa-house-user"></span> Kayıt Formu </h3></div>
                    @using (Html.BeginForm("Register", "Login", FormMethod.Post))
                    {
                        <div class="form-sample">
                            <div class="form-group">
                                <b>@Html.LabelFor(x => x.Name)</b>
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })<br />
                            </div>
                            <div class="form-group">
                                <b>@Html.LabelFor(x => x.Surname)</b>
                                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })<br />
                            </div>
                            <div class="form-group">
                                <b>@Html.LabelFor(x => x.UserName)</b>
                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })<br />
                            </div>
                            <div class="form-group">
                                <b>@Html.LabelFor(x => x.UserPassword)</b>
                                @Html.TextBoxFor(x => x.UserPassword, new { @class = "form-control", placeholder = "Parola", type = "Password" })<br />
                            </div>
                        </div>
                        <div class="text-center" style="background-color:white">
                            <button class="btn btn-info">Kayıt Ol</button>
                        </div>
                    }
